
header{
	position: absolute;
	z-index: 100;
	top: 0;
/*	right: 0;*/
	width: 100%;
	margin: 0;
	height: 20px;
	padding: 4px 0 8px;
	background: rgba(230, 240, 255, 0.3);
/*	opacity: .90;*/
	
	border-bottom: 1px solid #aaa;
	
	#logo {
		float:left;
		clear: left;
		margin: 0;
		text-decoration: none;
		
		img { width: 200px; }
	}
}

header > * {opacity: 1;}
	
header #logo img {}

header #slogan { color: #888;	/*text-shadow: 2px 2px 2px #CCCCCC;*/ }
header h1,
header p,
header #menus  {display: inline; vertical-align: bottom;}

header form label {color: #333; font-weight: bold;}

header #menus {
  text-align: right;
	width: 50%;
	float: right;
}

header #menus ul {
  margin: 0;
  padding: 0;
}

header #menus ul li {
  list-style-type: none;
  display: inline;
  margin: 0;
  padding: 0 10px 0;
  font-size: 18px;
  font-family: 'Lucida Grande', 'Lucida Sans Unicode', Verdana, sans-serif;
}

header #menus ul li.date {
    float: left;
    padding-top: 4px;
    color: #999;
}

header #menus ul li a,
header #menus ul li a:visited {
  color: #369;
	text-decoration: none;
}
header #menus ul li a:hover {
	color: #036;
	text-decoration: underline;
}


header form { display: inline; clear: none; border: none;}
	
